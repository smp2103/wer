
extends layouts/main

block content
    .post__comments
        div 축하메세지를 남겨보세
                if post.comments.length === 1
                    span.post__comment-number
                        span#jsCommentNumber 1
                        |  comment
                else
                    span.post__comment-number
                        span#jsCommentNumber=post.comments.length
                        |  comments
                form.add__comment#jsAddComment
                    input(type="text", placeholder="Add a comment")
                ul.post__comments-list#jsCommentList
                    each comment in post.comments.reverse()
                        li.commentList(id=`${comment.id}`)
                            span.commentSpan=comment.text 
                                if loggedUser && post.creator.id === loggedUser.id
                                    button.deleteButton ❌ 