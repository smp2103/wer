extends layouts/main
include mixins/postingList
include mixins/userList

block content
    .custom-file-container(data-upload-id='i')
        label
            | Upload File
            a.custom-file-container__image-clear(href='javascript:void(0)' title='Clear Image') &times; x
        label.custom-file-container__custom-file
            input.custom-file-container__custom-file__custom-file-input(type='file' accept='*' multiple="multiple" aria-label='Choose File')
            input(type='hidden' name='MAX_FILE_SIZE' value='10485760')
            span.custom-file-container__custom-file__custom-file-control abcd
            span.custom-file-container__custom-file__custom-file-control__button button
        .custom-file-container__image-multi-preview 