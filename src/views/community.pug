extends layouts/main
include mixins/postingList
block content

    if loggedUser
        .postings#postings
                    each item in posts
                            +postingList({
                                id : item._id,
                                title: item.title,
                                description: item.description,
                                creator : item.creator,
                                creatorName : item.creatorName,
                                like : item.like,
                                user : item.creator,
                                createdAt : item.createdAt,
                                comments : item.comments,
                                images : item.images
                            }) 
        .pageBox(style="display: flex;margin-top: 12px; justify-content: space-evenly")


            if currentPage === endPage
                a.pageBtn(href=`${routes.home}?page=${currentPage-1}`)
                    button(style="border:1px solid; margin-right: 10px;text-align:center;")
