mixin postingList(post={})



    div(class="grid-container")
        div(class=`col ${post.user.mbti} ${post.user.univ}`)
            .information-container.scale
                a(href=`${routes.postDetail(post.id)}`).u-profile
                    img.u-avatar(src=post.user.avatarUrl)
                    button(class="postDate" style="display:none;" value=`${post.createdAt}`)
                    .u-container
                        .u-info #{post.user.univ} / #{post.user.mbti} / #{post.user.age}ì‚´ / #{post.user.sex}
                        .u-name #{post.user.name}
                a(href=`${routes.postDetail(post.id)}`).u-description #{post.description}
                    div <br>
                    .sub-wrapper(style="display:flex;")
                        .date=timeForToday(post.createdAt)
                        <i class="far fa-comment" style="margin-left:13px; align-self:center;"></i> 
                        span(style="margin-left: 5px;") #{post.comments.length}
            
                .u-likeButton
                    .like-wrapper
                        button(class="postlike", value = post.id style= "grid-column:3/4" )
                            img(src="/static/heart.svg" class="heart")
                            .likeNum #{post.like}
    
    
