mixin commentList(comment={})
    
    
    div(class="grid-container")
        div(class=`col ${comment.creator.mbti} ${comment.creator.univ}`)
            .information-container.scale
                .u-profile
                    img.u-avatar(src=comment.creator.avatarUrl)
                    button(class="postDate" style="display:none;" value=`${comment.createdAt}`)
                    .u-container
                        .u-info #{comment.creator.univ} / #{comment.creator.mbti} / #{comment.creator.age}ì‚´ / #{comment.creator.sex}
                        .u-name #{comment.creator.name}
                #comment-description.u-description(style="overflow:auto; white-space: normal; text-overflow:unset;") #{comment.description}
                    div <br>
                    .date=timeForToday(comment.createdAt)
                    