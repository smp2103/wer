mixin userList(user={})
    
    div(class=`${user.mbti} ${user.univ} grid-container`)
        .col
            .information-container.scale
                a(href=`/users/${user.id}`).u-profile
                    img.u-avatar(src=user.avatarUrl)
                    .u-container

                        .u-info #{user.univ} / #{user.mbti} / #{user.age}ì‚´ / #{user.sex}
                        .u-name #{user.name}
                a(href=`/users/${user.id}`).u-description #{user.style}<br>#{user.description}
                .u-likeButton
                    .like-wrapper
                        .countImage(style="grid-column:2/3; margin-top:2px;")
                            .i-wrapper
                                <i class="far fa-images" style="font-size:15px"></i>
                            div(style="text-align:center; font-weight:600; font-size:13px; width:14px; margin:2.5px auto;") #{user.length}
                        button(class="like", value = user.id style="grid-column:4/5" )
                            img(src="/static/heart.svg" class="heart")
                            .likeNum #{user.like}

                    
                

    
