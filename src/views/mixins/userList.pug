mixin userList(user={})
    
    div(class=`${user.mbti} ${user.univ} grid-container`)
        .col
            .information-container.scale
                a(href=`/users/${user.id}`).u-profile
                    img.u-avatar(src=user.avatarUrl)
                    .u-container

                        .u-info #{user.univ} / #{user.mbti} / #{user.age}ì‚´ / #{user.sex}
                        .u-name #{user.name}
                a(href=`/users/${user.id}`).u-description #{user.style}<br>#{user.description}
                .u-likeButton
                    .like-wrapper
                        button(class="like", value = user.id )
                            img(src="/static/heart.svg" class="heart")
                        .likeNum #{user.like}

                    
                

    
